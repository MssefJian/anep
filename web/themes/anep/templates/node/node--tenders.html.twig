{%
    set classes = [
      'node',
      'node-detail',
      'node--type-' ~ node.bundle|clean_class,
      node.isPromoted() ? 'node--promoted',
      node.isSticky() ? 'node--sticky',
      not node.isPublished() ? 'node--unpublished',
      view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
      'clearfix',
    ]
  %}
  
  {% if view_mode == 'teaser' %}

    <div class="column-inner bg-size-cover">
       <div class="column-content-inner">
        <a href="{{ path('entity.node.canonical', {'node': node.id}) }}" target="_blank" >  
        <div class="widget gsc-icon-box left-2 box-margin-small icon-image border-1 box-background" style="background-color:#fff;">
             <div class="highlight_content verticle-align-top">
                <h3 class="title text-bleu">{{ node.field_id_tender.0.value|raw  }}</h3>
                <div class="desc text-gray ">
                   <p> 
                        
                            {{ node.field_the_announcement.0.value|raw  }}
                        
                    </p>
                </div>
             </div>
          </div>
        </a>
       </div>
    </div>
 
  {% elseif view_mode == 'teaser_2' %}
  {% else %}
  <article{{ attributes.addClass(classes)|without('about') }}>
    <header>
      {{ title_prefix }}
      {% if not page %}
        <h2{{ title_attributes.addClass('node__title') }}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
      {% endif %}
      {% set title_suffix = '' %}
      {{ title_suffix }}
  
    </header>
    <div{{ content_attributes.addClass('node__content', 'clearfix') }}>
      {{ content }}
    </div>
  </article>
  {% endif %}